{
    "plugins": ["react-hooks"],
    // https://juejin.cn/post/6844903492545429512
    // parserOptions 新增eslint识别tsx和jsx文件
    "parserOptions": {
      "ecmaVersion": 8, // 解析版本
      "sourceType": "module",
      "ecmaFeatures": { // 添加ES特性支持，使之能够识别ES6语法
        "jsx": true,
        "tsx": true
      }
    },
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
      }
}